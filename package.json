{
  "name": "pool-monitor",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "dev": "kill-port 5000 && nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postinstall": "npm run build",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop pool-monitor",
    "pm2:restart": "pm2 restart pool-monitor",
    "pm2:delete": "pm2 delete pool-monitor",
    "pm2:logs": "pm2 logs pool-monitor",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit",
    "deploy": "npm run build && npm run pm2:start"
  },
  "dependencies": {
    "@solana/spl-token": "^0.3.9",
    "@solana/web3.js": "^1.87.6",
    "bs58": "^6.0.0",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.4.2",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "kill-port": "^2.0.1",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
